<div style="display: flex; flex-direction: column; width: 100vw; align-items: center;">
    <h1>Cart</h1>
    <h2 id="cartId">{{cart.id}}</h2>
    <h4>Products:</h4>
    <div id="myDiv" style="display: flex; flex-direction: row; flex-wrap: wrap; gap: 10px; justify-content: center">
        {{#each result}}
            <div class="card" style="width: 18rem;">
                <img src="/img/default.png" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>
                    <p class="card-text">{{this.description}}</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><strong>Code:</strong> {{this.code}}</li>
                    <li class="list-group-item"><strong>Price:</strong>
                    {{this.price}}</li>
                    <li class="list-group-item"><strong>Category:</strong>
                    {{this.category}}</li>
                    <li class="list-group-item"><strong>Quantity:</strong>
                    {{this.quantity}}</li>
                </ul>
                <div class="card-body" style="text-align: center;display: flex; flex-direction: column; align-items: center; gap: 10px;">
                    <a href="#" class="card-link">More Info</a>
                    <a href="#" style="margin: 0" class="card-link">Add product</a>
                    <button data-pid="{{this.id}}" type="submit" class="card-link remove-button" style="margin: 0">üóëÔ∏è</button>
                </div>
            </div>
        {{/each}}
    </div>  
</div>

<script src='/socket.io/socket.io.js'></script>
<script src='/js/cart.js'></script>