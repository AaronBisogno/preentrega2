<div style='display: flex; width: 100vw'>
   <div style='width: 50%'>
      <ul id='productList' style='display: flex; flex-wrap: wrap; width: 100%'>
         {{#each products}}
            <li style='width: 50%'>
               <strong>Title:</strong>
               {{title}}<br />
               <strong>Description:</strong>
               {{description}}<br />
               <strong>Code:</strong>
               {{code}}<br />
               <strong>Price:</strong>
               {{price}}<br />
               <strong>Stock:</strong>
               {{stock}}<br />
               <strong>Category:</strong>
               {{category}}<br />
               <strong>Thumbnails:</strong>
               {{thumbnails}}<br />
               <strong>Id:</strong>
               {{_id}}<br />
               <br />
               <button onclick="deleteProduct('{{_id}}')">Delete Product</button>
            </li>
         {{/each}}
      </ul>
   </div>
   <div style='width: 50%; display: flex; justify-content: center'>
      <form id='productForm'>
         <label for='title'>Title:</label>
         <input type='text' id='title' name='title' placeholder='Product title required' required maxlength='50' />
         <br />
         <label for='description'>Description:</label>
         <input type='text' id='description' maxlength='500' name='description' placeholder='Product description' required />
         <br />
         <label for='code'>Code:</label>
         <input type='text' id='code' name='code' maxlength='15' placeholder='Product code' required />
         <br />
         <label for='price'>Price:</label>
         <input type='number' id='price' name='price' min='1' placeholder='Product price' required />
         <br />
         <label for='stock'>Stock:</label>
         <input type='number' id='stock' name='stock' min='1' placeholder='Product stock' required />
         <br />
         <label for='category'>Category:</label>
         <select name='categoty' id='category' required>
            <option value='' disabled selected>Select Category</option>
            <option value='Technology'>Technology</option>
            <option value='Electrodomestics'>Electrodomestics</option>
            <option value='House'>House</option>
            <option value='Tools'>Tools</option>
            <option value='Sports'>Sports</option>
            <option value='Vehicles'>Vehicles</option>

         </select>
         <br />
         <label for='thumbnails'>Thumbnails:</label>
         <input type='text' id='thumbnails' name='thumbnails' placeholder='Product image url' />
         <br />
         <button class='b-submit' type='submit'>Submit Product</button>
      </form>
   </div>
</div>
<script src='/socket.io/socket.io.js'></script>
<script src='/js/index.js'></script>